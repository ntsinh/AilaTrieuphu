<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ntsinh.ailatrieuphu.main.MainMenu"
    android:background="@drawable/bg1"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/stop"
            android:id="@+id/imStop"
            android:layout_weight="0.4" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/help50_50"
                android:id="@+id/im50"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/people_help"
                android:id="@+id/impeople" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/call"
                android:id="@+id/imCall"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/next"
                android:id="@+id/imNext" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/dollar"
                android:id="@+id/imCoin" />

            <TextView
                android:text="2000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvCoin"
                android:textSize="30sp"
                android:textColor="#fff" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/clock"
                android:id="@+id/imClock" />

            <TextView
                android:text="30"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tvClock"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="#000" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tvSocau"
                android:gravity="center_vertical"
                android:textColor="#FFF"
                android:textSize="16sp"
                tools:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:background="@drawable/bg_style"
            android:paddingLeft="10dp">

            <TextView
                android:text="Câu hỏi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tvCauHoi"
                android:gravity="center_vertical"
                android:textColor="#FFF"
                android:textSize="17sp"
                tools:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:padding="10dp">

                <Button

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btnA"
                    android:background="@drawable/answer_style"
                    android:textColor="#fff"
                    android:layout_weight="0.5"
                    android:padding="0dp"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <view
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    class="android.support.v4.widget.Space"
                    android:id="@+id/view2" />

                <Button

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btnB"
                    android:background="@drawable/answer_style"
                    android:textColor="#fff"
                    android:padding="0dp"
                    android:layout_weight="0.5"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:padding="10dp">

                <Button

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btnC"
                    android:background="@drawable/answer_style"
                    android:textColor="#fff"
                    android:layout_weight="0.5"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <view
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    class="android.support.v4.widget.Space"
                    android:id="@+id/view3" />

                <Button

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btnD"
                    android:background="@drawable/answer_style"
                    android:textColor="#fff"
                    android:layout_weight="0.5"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
